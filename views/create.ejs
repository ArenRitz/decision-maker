      <div class="container">
        <div class="row">
          <div class="col-2">
          </div>
          <div class="col-8">
            <form action="/create" method="post">
              <header class='main-content-header'>
                <p class="create-title">Create Poll</p>
                <div class="name-container">
                  <span> Please enter your name :</span>
                  <input type="text" class="text-input" id="name" required="true" name="creatorName">
                </div>
                <div class="email-container">
                  <span> Please enter your email :</span>
                  <input type="email" class="text-input" id="name" required="true" name="creatorEmail">
                </div>

              </header>

              <div class ="main-content" id="form-content" >
                <main>
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input custom-checkbox custom-control-input" id="checkbox" name="isNameRequired">
                    <label class="form-check-label" for="exampleCheck1" id="label-checkbox">Are voters required to submit their name?</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input type="text" class="form-control shadow-none choice-container" id="poll-title" required="true" name="title">
                    <label for="floatingInput">Poll title</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input type="text" class="form-control shadow-none choice-container" id="poll-description" name="description">
                    <label for="floatingInput">Poll description</label>
                  </div>
                  <div id="choices">
                    <div class="row">
                      <div class="col-6">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control shadow-none choice-container" id="choice-item" required="true" name="choices[0][title]">
                          <label for="floatingInput">choice title</label>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control shadow-none choice-container" id="choice-description" name="choices[0][description]">
                          <label for="floatingInput">choice description</label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row justify-content-center">
                    <button type="button" class= "btn" id="add-entry"><i class="fa-solid fa-plus"></i></button>
                  </div>
                </main>
              </div>
              <footer class='main-content-footer'>
                <button class="btn btn-submit" id="create-button" type="submit">Create Poll</button>
                <button type="reset" class="btn btn-secondary btn-reset">Reset</button>
              </footer>
            </form>
